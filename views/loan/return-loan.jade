extends ../partials/layout

block content
  h1= title
  
  p Book Title: 
    strong= loan.Book.title

  p Loaned By: 
    strong= loan.Patron.first_name + ' ' + loan.Patron.last_name
    
  p Loaned On: 
    strong= loan.loaned_on
    
  p Return By: 
    strong= loan.return_by
    
  form(method='POST' action='/loans/return/' + loan.id)
    p
      label(for='returned_on') Returned On: 
      input(id='returned_on' name='returned_on' type='text' value=moment(loan.returned_on).format('YYYY-MM-DD'))
    p
      input(type='submit' value='Return Book')
      input(type='hidden' value=loan.id name='id')
