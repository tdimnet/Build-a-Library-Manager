extends ../partials/layout

block content
  h1= title
  
  p
    a.button(href='/books/new') Create New Book
    
  p Filters:  
    a(href='/books') All
    |     | 
    a(href='/books/overdue') Overdue
    |     | 
    a(href='/books/checked') Checkout Out
  
  table
    thead
      tr
        th Book title
        th Author
        th Genre
        th Year Released
        
    tbody
      if books.length > 0
        each book in books
          tr
            td
              a(href='/books/details/' + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.first_published
      else
        tr
          td No books..
