extends ../partials/layout

block content
  h1= title
  
  table
    thead
      tr
        th Book title
        th Author
        th Genre
        th Year Released
        
    tbody
      if books.length > 0
        each book in books
          tr
            td= book.title
            td= book.author
            td= book.genre
            td= book.first_published
      else
        tr
          td No books..
